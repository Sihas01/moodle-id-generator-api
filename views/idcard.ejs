<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href='<%= base_url %>/'>
    <title>User ID Card</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            padding: 20px;
            margin: 0;
            box-sizing: border-box;
        }

        .main-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 450px;
        }

        .id-card-container {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 350px;
            overflow: hidden;
            position: relative;
            transition: transform 0.3s ease;
            margin-bottom: 25px;
        }

        .id-card-container:hover {
            transform: translateY(-5px);
        }

        .card-header {
            background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
            height: 100px;
            position: relative;
        }

        .profile-image-container {
            width: 120px;
            height: 120px;
            background-color: #fff;
            border-radius: 50%;
            position: absolute;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            padding: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-image {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #e0e0e0;
        }

        .profile-placeholder {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            background-color: #e0e0e0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 40px;
            color: #757575;
        }

        .card-body {
            padding-top: 70px;
            padding-bottom: 15px;
            text-align: center;
        }

        .user-name {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin: 0;
            margin-bottom: 5px;
        }

        .user-role {
            font-size: 14px;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 1px;
            background-color: #e9ecef;
            padding: 4px 12px;
            border-radius: 15px;
            display: inline-block;
            margin-bottom: 20px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 12px;
            text-align: left;
            padding: 0 35px;
            margin-top: 10px;
        }

        .info-item {
            border-bottom: 1px solid #eee;
            padding-bottom: 8px;
        }

        .info-label {
            font-size: 11px;
            color: #888;
            margin-bottom: 2px;
            display: block;
            text-transform: uppercase;
        }

        .info-value {
            font-size: 15px;
            color: #444;
            font-weight: 500;
            word-break: break-all;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 10px;
            text-align: center;
            font-size: 12px;
            color: #aaa;
            border-top: 1px solid #eee;
            margin-top: 15px;
        }

        .qr-section {
            margin-top: 10px;
            padding: 10px;
            border-radius: 12px;
            display: inline-block;
        }

        .qr-label {
            font-size: 10px;
            color: #999;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            display: block;
        }

        .qr-code-img {
            width: 200px;
            height: 200px;
            display: block;
            margin: 0 auto;
        }

        .download-btn {
            margin-top: 30px;
            background: linear-gradient(135deg, #ea667a 0%, #6f3233 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }

        .download-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        }

        .download-btn:active {
            transform: translateY(0);
        }

        .mt-5{
            margin-top: 15px;
        }

        /* Mobile adjustments */
        @media screen and (max-width: 768px) {
            .id-card-container {
                width: 100% !important;
            }

            .download-btn {
                display: none !important;
            }
        }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="id-card-container" id="id-card">
            <div class="card-header"></div>

            <div class="profile-image-container">
                <% if (profile_image) { %>
                    <img src="<%= profile_image %>" alt="Profile" class="profile-image" crossorigin="anonymous">
                    <% } else { %>
                        <div class="profile-placeholder">
                            <%= name.charAt(0).toUpperCase() %>
                        </div>
                        <% } %>
            </div>

            <div class="card-body mt-5">
                <h2 class="user-name">
                    <%= name %>
                </h2>
                <span class="user-role">
                    <%= roles %>
                </span>

                <div class="info-grid mt-5">
                    <div class="info-item">
                        <span class="info-label">Student ID</span>
                        <span class="info-value">
                            <%= user_id %>
                        </span>
                    </div>

                    <div class="info-item">
                        <span class="info-label">Enrolled Courses</span>
                        <% if (courses && courses.length> 0) { %>
                            <div style="margin-top: 5px;">
                                <% courses.forEach(function(course) { %>
                                    <div class="info-value" style="margin-bottom: 4px;">
                                        <%= course %>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } else { %>
                                <span class="info-value">No courses found</span>
                                <% } %>
                    </div>

                    <% if (qr_code) { %>
                        <div style="text-align: center; margin-top: 10px;">
                            <div class="qr-section">
                                <img src="<%= qr_code %>" alt="User QR Code" class="qr-code-img"
                                    crossorigin="anonymous">
                            </div>
                        </div>
                        <% } %>                           
                </div>

                <div class="footer">
                    <% if (typeof logo_base64 !=='undefined' && logo_base64) { %>
                        <img src="<%= logo_base64 %>" alt="LearnX Plus"
                            style="width: auto; height: 35px; max-width: 120px;">
                        <% } else { %>
                            <img src="LearnXPlus_Final_Logo.png" alt="LearnX Plus"
                                style="width: auto; height: 35px; max-width: 120px;" crossorigin="anonymous">
                            <% } %>
                </div>
            </div>
        </div>

        <button type="button" class="download-btn" id="download-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v4" />
                <polyline points="7 10 12 15 17 10" />
                <line x1="12" y1="15" x2="12" y2="3" />
            </svg>
            Download ID Card
        </button>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        console.log('ID System Base URL:', document.baseURI);
        const btn = document.getElementById('download-btn');

        async function saveCard(e) {
            // Check if mobile (logic matches the CSS media query)
            if (window.innerWidth <= 768) {
                console.log('Download disabled on mobile devices.');
                return;
            }

            if (e) {
                e.preventDefault();
                e.stopPropagation();
            }

            const card = document.getElementById('id-card');
            const originalText = btn.innerHTML;

            btn.disabled = true;
            btn.innerHTML = 'Generating...';

            window.scrollTo(0, 0);

            try {
                const canvas = await html2canvas(card, {
                    useCORS: true,
                    scale: 3, 
                    backgroundColor: "#ffffff",
                    borderRadius: 20,
                    logging: false,
                    allowTaint: true
                });

                const dataUrl = canvas.toDataURL('image/png');
                const fileName = 'ID-Card-<%= name.replace(/[^a-z0-9]/gi, "_") %>.png';

                const link = document.createElement('a');
                link.href = dataUrl;
                link.download = fileName;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                setTimeout(() => {
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }, 1000);

            } catch (err) {
                console.error('Save Error:', err);
                alert('Could not generate image. Please try again.');
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        btn.addEventListener('click', saveCard);
    </script>
</body>

</html>